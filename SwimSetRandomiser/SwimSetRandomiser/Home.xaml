<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 BackgroundImage="images/background.png"
             x:Class="SwimSetRandomiser.Home">

    <!--Logo Text on Home Screen-->
    <StackLayout Margin="5">
        <Image Source="images/LogoText.png" BackgroundColor="DarkCyan" 
            VerticalOptions="StartAndExpand" Opacity="0.7" >
        </Image>    


        <!--Information about the App Button-->
        <Button x:Name="btnStart" Text="Info On the App" Clicked="btnInfo_Clicked"  
        FontSize="Large" Padding="10" BorderRadius="20"
        BackgroundColor="White" Opacity="0.7" TextColor="DarkCyan" >
        </Button>

        <!--Credits Button-->
        <Button x:Name="btnReset" Text="Credits and Resources Used" Clicked="btnCred_Clicked" 
        FontSize="Large" Padding="10" BorderRadius="20"
        BackgroundColor="White" Opacity="0.7" TextColor="DarkCyan">
        </Button>
    </StackLayout>
   

</ContentPage>